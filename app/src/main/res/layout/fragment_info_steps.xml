<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <!-- Background Hijau -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:background="@drawable/header_background"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_dicoding"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_black"
                android:text="@string/info_steps"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="45sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.163"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/appNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="92dp"
                android:fontFamily="@font/roboto_black"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/tv_dicoding"
                app:layout_constraintTop_toBottomOf="@+id/tv_dicoding" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ScrollView for content -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="@string/steps_info_image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_steps_image" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/jumlah_langkah_kaki_yang_cukup_dan_bagus_untuk_tubuh"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/berjalan_kaki_adalah_salah_satu_bentuk_aktivitas_fisik_yang_mudah_dilakukan_dan_memiliki_banyak_manfaat_bagi_kesehatan_dengan_berjalan_kaki_secara_rutin_anda_dapat_meningkatkan_kesehatan_jantung_mengontrol_berat_badan_serta_memperbaiki_suasana_hati_dan_energi_namun_berapa_jumlah_langkah_yang_cukup_dan_bagus_untuk_tubuh" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/penelitian_menunjukkan_bahwa_berjalan_setidaknya_10_000_langkah_per_hari_dapat_memberikan_manfaat_kesehatan_yang_signifikan_angka_ini_setara_dengan_sekitar_8_kilometer_atau_5_mil_namun_beberapa_studi_juga_menunjukkan_bahwa_bahkan_berjalan_sekitar_7_000_langkah_per_hari_sudah_cukup_untuk_memberikan_manfaat_kesehatan_yang_berarti" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Manfaat Berjalan Kaki:"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="1. Meningkatkan Kesehatan Jantung: Berjalan kaki secara rutin dapat membantu menurunkan risiko penyakit jantung dan stroke dengan memperbaiki sirkulasi darah dan menurunkan tekanan darah." />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="2. Mengontrol Berat Badan: Berjalan kaki membantu membakar kalori dan mengurangi lemak tubuh, sehingga membantu dalam mengontrol berat badan." />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="3. Memperbaiki Suasana Hati: Aktivitas fisik seperti berjalan kaki dapat meningkatkan produksi hormon endorfin yang membantu memperbaiki suasana hati dan mengurangi stres." />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="4. Meningkatkan Energi: Berjalan kaki dapat meningkatkan energi dengan meningkatkan aliran darah dan oksigen ke seluruh tubuh." />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Tips untuk Menambah Jumlah Langkah Harian:"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="1. Gunakan tangga daripada lift atau eskalator." />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="2. Parkir kendaraan lebih jauh dari pintu masuk tujuan Anda." />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="3. Luangkan waktu untuk berjalan-jalan singkat selama istirahat kerja atau setelah makan siang." />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="4. Gunakan aplikasi penghitung langkah untuk memantau aktivitas fisik harian Anda dan menetapkan tujuan." />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="5. Ajak teman atau keluarga untuk berjalan bersama sehingga lebih menyenangkan dan menjadi kebiasaan." />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Dengan menambahkan lebih banyak langkah ke dalam rutinitas harian Anda, Anda dapat mencapai gaya hidup yang lebih sehat dan aktif. Mulailah dengan target yang realistis dan tingkatkan secara bertahap sesuai kemampuan Anda." />

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>