<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <!-- Background Hijau -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:background="@drawable/header_background"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_dicoding"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_black"
                android:text="@string/info_steps"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="45sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.163"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/appNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="92dp"
                android:fontFamily="@font/roboto_black"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/tv_dicoding"
                app:layout_constraintTop_toBottomOf="@+id/tv_dicoding" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ScrollView for content -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="@string/steps_info_image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_steps_image" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/jumlah_langkah_kaki_yang_cukup_dan_bagus_untuk_tubuh"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/berjalan_kaki_adalah_salah_satu_bentuk_aktivitas_fisik_yang_mudah_dilakukan_dan_memiliki_banyak_manfaat_bagi_kesehatan_dengan_berjalan_kaki_secara_rutin_anda_dapat_meningkatkan_kesehatan_jantung_mengontrol_berat_badan_serta_memperbaiki_suasana_hati_dan_energi_namun_berapa_jumlah_langkah_yang_cukup_dan_bagus_untuk_tubuh" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/penelitian_menunjukkan_bahwa_berjalan_setidaknya_10_000_langkah_per_hari_dapat_memberikan_manfaat_kesehatan_yang_signifikan_angka_ini_setara_dengan_sekitar_8_kilometer_atau_5_mil_namun_beberapa_studi_juga_menunjukkan_bahwa_bahkan_berjalan_sekitar_7_000_langkah_per_hari_sudah_cukup_untuk_memberikan_manfaat_kesehatan_yang_berarti" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/manfaat_berjalan_kaki"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/_1_meningkatkan_kesehatan_jantung_berjalan_kaki_secara_rutin_dapat_membantu_menurunkan_risiko_penyakit_jantung_dan_stroke_dengan_memperbaiki_sirkulasi_darah_dan_menurunkan_tekanan_darah" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/_2_mengontrol_berat_badan_berjalan_kaki_membantu_membakar_kalori_dan_mengurangi_lemak_tubuh_sehingga_membantu_dalam_mengontrol_berat_badan" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/_3_memperbaiki_suasana_hati_aktivitas_fisik_seperti_berjalan_kaki_dapat_meningkatkan_produksi_hormon_endorfin_yang_membantu_memperbaiki_suasana_hati_dan_mengurangi_stres" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/_4_meningkatkan_energi_berjalan_kaki_dapat_meningkatkan_energi_dengan_meningkatkan_aliran_darah_dan_oksigen_ke_seluruh_tubuh" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/tips_untuk_menambah_jumlah_langkah_harian"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/_1_gunakan_tangga_daripada_lift_atau_eskalator" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/_2_parkir_kendaraan_lebih_jauh_dari_pintu_masuk_tujuan_anda" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/_3_luangkan_waktu_untuk_berjalan_jalan_singkat_selama_istirahat_kerja_atau_setelah_makan_siang" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/_4_gunakan_aplikasi_penghitung_langkah_untuk_memantau_aktivitas_fisik_harian_anda_dan_menetapkan_tujuan" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/_5_ajak_teman_atau_keluarga_untuk_berjalan_bersama_sehingga_lebih_menyenangkan_dan_menjadi_kebiasaan" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/dengan_menambahkan_lebih_banyak_langkah_ke_dalam_rutinitas_harian_anda_anda_dapat_mencapai_gaya_hidup_yang_lebih_sehat_dan_aktif_mulailah_dengan_target_yang_realistis_dan_tingkatkan_secara_bertahap_sesuai_kemampuan_anda" />

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>